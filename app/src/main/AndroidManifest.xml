<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.basaile92.listelivre">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.BookLibraryActivity" />
        <activity
            android:name=".activity.AddBookActivity"
            android:label="Add a book" />
        <activity android:name=".activity.DisplayBookActivity" />
        <activity android:name=".activity.ListBookCollectionActivity" />
        <activity android:name=".activity.CollectionActivity" />
        <activity android:name=".activity.TypeManagerActivity" />
        <activity android:name=".activity.ModifyBookActivity"/>
        <activity android:name=".activity.MainActivity">

        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="user"
            android:stateNotNeeded="true"
            tools:replace="android:screenOrientation"></activity>
        <activity android:name=".activity.AddCollectionActivity"></activity>
    </application>

</manifest>