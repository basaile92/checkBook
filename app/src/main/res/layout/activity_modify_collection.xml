<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.basaile92.listelivre.activity.ModifyCollectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2.5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">
                        <EditText
                            android:id="@+id/editCollectionName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CollectionName"/>
                </LinearLayout>
                <ImageView
                    android:text="Send"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveCollectionModification"
                    android:src="@drawable/send"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginTop="30dp"
                android:gravity="center">



                <ImageView
                    android:id="@+id/addBookToCollectionButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/addBookToCollection"
                    android:src="@drawable/plus"/>


                <ImageView
                    android:id="@+id/deleteBookFromCollection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/addBookToCollection"
                    android:src="@drawable/moins"/>


                <ImageView
                    android:text="@string/deleteCollectionButton"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteCollectionButton"
                    android:gravity="center"
                    android:src="@drawable/delete"
                    android:layout_width="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
