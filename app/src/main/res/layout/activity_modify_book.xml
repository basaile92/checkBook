<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_modify_book_library"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.basaile92.listelivre.activity.DisplayBookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/isbnEdit"
                    android:tag="@string/isbnText"
                    android:hint="@string/isbnText"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleEdit"
                        android:hint="@string/titleText"
                        android:layout_weight="1"
                        android:inputType="textShortMessage" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/collectionEdit"
                        android:hint="@string/collectionText"
                        android:inputType="textLongMessage"
                        android:layout_weight="1" />

                </LinearLayout>

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_add"
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/authorsText"
                    android:text="@string/authorsText"
                    android:textSize="18sp"
                    android:gravity="center_vertical|center_horizontal" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">


                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/authorsListView" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="254dp"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addAuthorsEdit"
                            android:layout_weight="4"
                            android:hint="@string/addAuthorsText"
                            android:inputType="textShortMessage" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/addAuthorsButton"
                            app:srcCompat="@android:drawable/ic_menu_add"
                            android:adjustViewBounds="false"
                            android:cropToPadding="false" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/publisherEdit"
                    android:hint="@string/publisherText"
                    android:inputType="textLongMessage" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/yearEdit"
                    android:hint="@string/yearText"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/typeText"
                    android:text="@string/typesText"
                    android:textSize="18sp"
                    android:gravity="center_vertical|center_horizontal|center"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/typesText"
                        android:layout_weight="4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_menu_edit"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:id="@+id/addTypesButton" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/summaryEdit"
                    android:hint="@string/summaryText"
                    android:inputType="textLongMessage" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ownerEdit"
                    android:hint="@string/ownerText"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:text="@string/isReadText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/isReadCheckBox"
                    android:layout_weight="1"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:text="@string/isBorrowedText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/isBorrowedCheckBox"
                    android:layout_weight="3"
                    android:checked="false" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/borrowerEdit"
                    android:layout_weight="2"
                    android:visibility="invisible"
                    android:hint="@string/borrowerText"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/commentsEdit"
                    android:hint="@string/commentText"
                    android:inputType="textLongMessage" />
            </LinearLayout>

            <Button
                android:text="Modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modifyButton"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
